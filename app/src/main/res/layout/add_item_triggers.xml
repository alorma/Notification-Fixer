<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:orientation="horizontal"
    tools:showIn="@layout/activity_add_notification">

    <ImageView
        android:id="@+id/step5"
        style="@style/AddNotification.Stepper.Circle"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:theme="@style/AppTheme.Inverse" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/triggerData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"/>

        <Button
            android:id="@+id/addTrigger"
            style="@style/AddNotification.Button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical|start"
            android:text="Add trigger"
            android:theme="@style/AppTheme.Inverse" />

    </LinearLayout>
</LinearLayout>