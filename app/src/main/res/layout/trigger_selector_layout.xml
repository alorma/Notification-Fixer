<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="android.widget.FrameLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:scrollbars="horizontal">

        <ImageView
            android:id="@+id/selectTriggerPhone"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:background="@drawable/trigger_selector"
            android:elevation="8dp"
            android:padding="12dp"
            android:src="@drawable/ic_phone_in_talk" />

        <ImageView
            android:id="@+id/selectTriggerSms"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:background="@drawable/trigger_selector"
            android:elevation="8dp"
            android:padding="12dp"
            android:src="@drawable/ic_sms" />

        <ImageView
            android:id="@+id/selectTriggerTime"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:background="@drawable/trigger_selector"
            android:elevation="8dp"
            android:padding="12dp"
            android:src="@drawable/ic_av_timer" />

        <ImageView
            android:id="@+id/selectTriggerZone"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:background="@drawable/trigger_selector"
            android:elevation="8dp"
            android:padding="12dp"
            android:src="@drawable/ic_location" />

    </LinearLayout>

</merge>