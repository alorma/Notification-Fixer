<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alorma.notifix">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".NotifixApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.features.notifications.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.features.create.AddNotificationActivity"
            android:label="@string/title_activity_add_notification"
            android:theme="@style/AppTheme" />
        <activity android:name=".ui.features.trigger.CreateTriggerActivity"
            android:label="@string/title_activity_add_trigger_notification"
            android:theme="@style/AppTheme"  />
        <activity android:name=".ui.features.trigger.ConfigureSmsTriggerActivity" />
        <activity android:name=".ui.features.trigger.ConfigurePhoneTriggerActivity" />

        <receiver android:name=".background.notifications.NotificationsBootBroadcast"
            android:enabled="true"
            android:exported="true"
            android:label="NotificationsBootBroadcast">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>